<?xml version="1.0"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         colors="true"
         bootstrap="vendor/autoload.php"
         xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/10.5/phpunit.xsd"
         displayDetailsOnPhpunitDeprecations="true">

    <coverage>
        <report>
            <html outputDirectory="coverage"/>
        </report>
    </coverage>

    <source restrictDeprecations="true"
            restrictNotices="true"
            restrictWarnings="true">
        <include>
            <directory>src*</directory>
        </include>
        <!-- do not need to test the messages file -->
        <exclude>
            <file>src/messages/FrmtrMessages.en.php</file>
        </exclude>
    </source>

    <testsuites>
        <testsuite name="src_tests">
            <directory>tests*</directory>
            <!-- this is an abstract class with methods shared by child classes for testing date/time formatting -->
            <exclude>tests/date_time/FrmtrDateTimeTest.php</exclude>
        </testsuite>
    </testsuites>
</phpunit>
